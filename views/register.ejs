<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link rel="stylesheet" href="csss/login.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Your custom CSS -->
    <link rel="stylesheet" href="css/style.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .container {
            position: relative;
        }

        .background-image {
            position: absolute;
            top: 0;
            left: 0;
            
            z-index: -1;
        }
        .sang-dangnhap{
            color: rgb(242, 227, 202);
            margin-top: 670px;
            margin-left: 30%;
            font-size: 15px;
        }
    </style>
</head>
<body>




    <div class="container" ng-app="myapp" ng-controller="myctrl">
        <img class="background-image w-100 h-100" src="Images/login.jpg" height="900px" style="max-width:100%;" alt="Background Image">
        <div style="margin-left: 2%;">
            <div id='login-form' class='login-page'>
                <div class="form-boxs">
                    <form id='register' name="registerForm" class='input-dangKy' method="POST" role="form" style="margin-left: 20%; margin-top: -70px;" ng-submit="submitForm()" novalidate>
                        <h2 style="color: rgb(254, 228, 194); font-size: 35px; padding-left: 22%;">Đăng ký</h2>
                        <input style="margin-top: 30px;" name="HoVaTen" ng-model="formData.HoVaTen" type='text' class='input-field' placeholder='Họ và tên' required>
                        <div ng-show="registerForm.HoVaTen.$dirty && registerForm.HoVaTen.$error.required">
                            <p style="color: red;">Họ và tên không được bỏ trống.</p>
                        </div>
                        <input type='text' name="SoDienThoai" ng-model="formData.SoDienThoai" class='input-field' placeholder='Số điện thoại' required>
                        <div ng-show="registerForm.SoDienThoai.$dirty && registerForm.SoDienThoai.$error.required">
                            <p style="color: red;">Số điện thoại không được bỏ trống.</p>
                        </div>
                        <input type='email' name="Email" ng-model="formData.Email" class='input-field' placeholder='Email' required>
                        <div ng-show="registerForm.Email.$dirty && registerForm.Email.$error.required">
                            <p style="color: red;">Email không được bỏ trống.</p>
                        </div>
                        <div ng-show="registerForm.Email.$dirty && registerForm.Email.$error.email">
                            <p style="color: red;">Email không hợp lệ.</p>
                        </div>
                        <input type='password' name="MatKhau" id="matKhau" ng-model="formData.MatKhau" class='input-field' placeholder='Mật khẩu' required>
                        <div ng-show="registerForm.MatKhau.$dirty && registerForm.MatKhau.$error.required">
                            <p style="color: red;">Mật khẩu không được bỏ trống.</p>
                        </div>
                        <input type='password' id="xacNhanMatKhau" ng-model="formData.XacNhanMatKhau" class='input-field' placeholder='Xác nhận mật khẩu' required>
                        <div ng-show="formData.MatKhau !== formData.XacNhanMatKhau && formData.XacNhanMatKhau !== ''">
                            <p style="color: red;">Mật khẩu không khớp.</p>
                        </div>
                        
                        <input type='checkbox' id="HienThiMK"  class='check-box' onclick='HienThiMatKhauDangKy()'>
                        <label for="">hiển thị mật khẩu</label>
                        <button style="margin-top: 120px;" type='submit' class='submit-btn'>Đăng ký</button>
                    </form>
                    <div class="sang-dangnhap">
                        <label class="chuataikhoan" for="">Bạn đã có tài khoản! <a style="font-size: 16px;" href="/dang-nhap">Đăng nhập</a></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <script>
        angular.module('myapp', [])
            .controller('myctrl', function ($scope) {
                $scope.formData = {};
    
                $scope.submitForm = function () {
                    
                    if ($scope.formData.MatKhau !== $scope.formData.XacNhanMatKhau) {
                        alert('Mật khẩu không khớp.');
                        return false;
                    }
                   
                };
            });


            function HienThiMatKhauDangKy(){
            var checkbox = document.getElementById('HienThiMK');
            var matkhau = document.getElementById('matKhau');
            var hienThimk = document.getElementById('xacNhanMatKhau');
            if(checkbox.checked){
                matkhau.type = 'text';
                hienThimk.type = 'text';

            }
            else{
                matkhau.type = 'password';
                hienThimk.type = 'password';
            }
        }
    </script>
    


</body>
</html>
